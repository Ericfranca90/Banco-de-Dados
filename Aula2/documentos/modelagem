// Entidades do App de Monitoramento Climático e Ambiental

Table Usuario {
  id int [pk, increment]
  nome varchar(100)
  email varchar(100)
  senha varchar(50)
  tipo varchar(50)  // ex: cidadão, pesquisador, administrador
}

Table CategoriaEventoAmbiental {
  id int [pk, increment]
  nome varchar(50)          // ex: Queimada, Inundação, Desmatamento
  descricao text
}

Table EventoAmbiental {
  id int [pk, increment]
  categoria_id int
  data_hora datetime
  localizacao varchar(100)  // cidade, coordenadas, etc.
  status varchar(20)        // ex: ativo, resolvido, em análise
}

Table RelatoUsuario {
  id int [pk, increment]
  usuario_id int
  evento_id int
  descricao text
  midia varchar(255)        // link ou caminho da foto/vídeo
  data_envio datetime
}

Table NotificacaoUsuario {
  id int [pk, increment]
  usuario_id int
  mensagem text
  data_envio datetime
}

// Relacionamentos
Ref: EventoAmbiental.categoria_id > CategoriaEventoAmbiental.id
Ref: RelatoUsuario.usuario_id > Usuario.id
Ref: RelatoUsuario.evento_id > EventoAmbiental.id
Ref: NotificacaoUsuario.usuario_id > Usuario.id
